<!-- MOBILE NAVIGATION -->

<div class="title-bar show-for-small-only">
  <div class="title-bar-left">
    <button class="menu-icon" type="button" data-open="mobile-menu"></button>
    <span class="title-bar-title">MENU</span>
  </div>
</div>

<!-- DESKTOP NAVIGATION -->

<nav class="top-bar nav-desktop">
  <div class="top-bar-left">
    <h3 class="site-logo">HouseHunter</h3>
  </div>
  <div class="top-bar-right">
    <% if logged_in? %>
      <ul class="menu menu-desktop">
        <li><%= link_to "Home", user_path(current_user) %></li>
        <li><%= link_to "Update", edit_user_path(current_user) %></li>
        <li><%= link_to "Delete", user_path(current_user),  method: :delete,
                                                            data: { confirm: "You sure?" } %></li>
        <li><%= link_to "Log Out", logout_path, method: :delete %></li>
      </ul>
    <% else %>
      <ul class="menu menu-desktop">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Sign Up", new_user_path %></li>
        <li><%= link_to "Log In", login_path %></li>
      </ul>
    <% end %>
  </div>
</nav>
