<h1>House Show Page</h1>
<%= flash[:notice] %>
<h3><%= @house.name %></h3>
<h3><%= @house.full_address %></h3>
<br>
<p>Asking Amount: $<%= @house.asking_amount %></p>
<p>Total Sqft: <%= @house.total_sqft %></p>
<br>
<% if !@notes.empty? %>
  <ul>
    <% @notes.each do |note| %>
      <li><%= link_to "#{note.room}", note_path(note) %></li>
    <% end %>
  </ul>
<% end %>
<p><%= link_to "Add Room", new_house_note_path(@house) %></p>
<p><%= link_to "Back", user_path(current_user) %></p>
<p><%= link_to "Edit", edit_user_house_path(current_user) %></p>
<p><%= link_to "Delete", user_house_path(current_user),  method: :delete,
                                  data: { confirm: "Are you sure?" } %></p>
